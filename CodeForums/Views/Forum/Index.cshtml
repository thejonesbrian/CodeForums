@model CodeForums.Models.ForumModels.ForumIndexModel

<h1>CodeForum</h1>
<table class="table table-hover table-striped" id="forumIndexTable">
    <tbody>
        @foreach (var forum in Model.ForumList)
        {
        <tr>
            <td>
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">@forum.Name</a>
            </td>
            <td>
                @forum.Description
            </td>
        </tr>
        }
    </tbody>
</table>