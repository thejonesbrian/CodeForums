@model CodeForums.Models.Forum.ForumTopicModel

<h1>@Model.Forum.Name Forum.</h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-striped">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else  {
    <div class="noPosts">
        <h3>@Model.Forum.Name has <em>no posts</em> as yet.</h3>
        <p>
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>Create</span>
            </a>
        </p>
    </div>
    
}
